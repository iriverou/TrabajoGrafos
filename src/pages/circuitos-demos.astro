    .circuits-container {
        margin: 30px 0;
    }

    .circuit-card {
        background-color: #f8f9fa;
        padding: 20px;
        margin: 15px 0;
        border-radius: 8px;
        border-left: 4px solid #2196F3;
    }

    .circuit-card h4 {
        margin: 0 0 10px 0;
        color: #333;
    }

    .circuit-card p {
        margin: 0;
        color: #666;
        line-height: 1.5;
    }

    .advanced-section {
