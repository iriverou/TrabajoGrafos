---
export interface Props {
    title: string;
    description?: string;
}

const { title, description = "Simulador interactivo de Wireworld - Autómatas Celulares" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/TrabajoGrafos/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="stylesheet" href="/TrabajoGrafos/styles.css" />
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            
            body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                background-color: var(--color-bg); /* Fondo de body */
                color: var(--color-text); /* Texto general */
                line-height: 1.6;
            }
            
            .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 20px;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <!-- Header -->
            <header class="header">
                <div class="header-content">
                    <h1>Wireworld - Simulador de Autómatas Celulares</h1>
                    <p>Exploración de Autómatas Celulares: Teoría, Aplicaciones y Desarrollo de un Modelo Interactivo</p>
                </div>
                
                <!-- Navigation -->
                <nav class="navigation">
                    <a href="/TrabajoGrafos/" class="nav-link btn">Inicio</a>
                    <a href="/TrabajoGrafos/que-es-wireworld" class="nav-link btn">¿Qué es Wireworld?</a>
                    <a href="/TrabajoGrafos/circuitos-demos" class="nav-link btn">circuitos-demos</a>
                </nav>
            </header>
            
            <!-- Main Content -->
            <main>
                <slot />
            </main>
            
            <!-- Footer -->
            <footer class="footer">
                <div class="footer-content">
                    <p><strong>Trabajo Académico</strong> - Autómatas Celulares</p>
                    <p>Universidad: Universidad Tecnologia Metropolitana - Julio 2025</p>
                </div>
            </footer>
        </div>
    </body>
</html>

<style>
    :root {
        --color-btn: #457b9d;
        --color-btn-hover: #2f5369;
        --color-btn-text: #ffffff;
        --color-btn-border: #457b9d;
    }
    .header {
        text-align: center;
        margin-bottom: 30px;
        padding: 30px;
        background: var(--color-header); /* Fondo de header */
        color: var(--color-btn-text); /* Texto de header */
        border-radius: 12px;
        box-shadow: 0 4px 6px #d2cfd6;
    }
    
    .header-content {
        margin-bottom: 20px;
    }
    
    .header h1 {
        font-size: 2.5em;
        margin-bottom: 10px;
        text-shadow: 0 2px 4px #52474d4d;
    }
    
    .header p {
        font-size: 1.1em;
        opacity: 0.9;
    }
    
    .navigation {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .nav-link {
        text-decoration: none;
        color: var(--color-btn-text);
        padding: 10px 20px;
        border-radius: 25px;
        background-color: var(--color-btn);
        transition: all 0.3s;
        font-weight: 500;
        border: 2px solid transparent;
    }
    
    .nav-link:hover, .nav-link:focus {
        background-color: var(--color-btn-hover);
        border-color: var(--color-btn-hover);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px #52474d33;
    }
    
    main {
        background: #ffffff;
        padding: 30px;
        border-radius: 12px;
        margin-bottom: 30px;
        box-shadow: 0 4px 8px #52474d1a;
        min-height: 400px;
        border: 1px solid #a8dadc;
    }
    
    .footer {
        text-align: center;
        padding: 20px;
        background-color: var(--color-footer); /* Fondo de footer */
        color: var(--color-btn-text); /* Texto de footer */
        border-radius: 12px;
    }
    
    .footer-content p {
        margin: 5px 0;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
        .header h1 {
            font-size: 2em;
        }
        
        .navigation {
            gap: 10px;
        }
        
        .nav-link {
            padding: 8px 15px;
            font-size: 0.9em;
        }
    }
</style>